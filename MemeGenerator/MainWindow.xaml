<Window x:Class="MemeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemeGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="myImgTemplate">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Image">
                        <Setter Property="Margin" Value="10"/>
                    </Style>
                </StackPanel.Resources>
                <Image Source="{Binding Path=Name}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>




    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="sucsess.jpg" Name="mainImg"/>
        <ScrollViewer Grid.Row="1" VerticalAlignment="Bottom" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" Height="100" Margin="10">
                <StackPanel.Resources >
                    <Style TargetType="Image">
                        <Setter Property="Margin" Value="10"/>
                    </Style>
                </StackPanel.Resources>
                <Image  StretchDirection="DownOnly" Source="sucsess.jpg" Name="yes" MouseDown="imageSwitch" />
                <Image StretchDirection="DownOnly" Source="knowledge.jpg" Name="think" MouseDown="imageSwitch"/>
                <Image StretchDirection="DownOnly" Source="sucsess.jpg" />
                <Image StretchDirection="DownOnly" Source="sucsess.jpg"/>
                <Image StretchDirection="DownOnly" Source="sucsess.jpg" />
                <Image StretchDirection="DownOnly" Source="sucsess.jpg"/>
            </StackPanel>
        </ScrollViewer>
